{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
  <div class="example-wrapper">
    <h1>Sign in</h1>

    {% if error %}
      <div style="color: red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
      <label for="username">Username</label>
      <input type="text" id="username" name="_username" value="{{ last_username }}" required>

      <label for="password" style="display:block;margin-top:8px;">Password</label>
      <input type="password" id="password" name="_password" required>

      {# CSRF token required by form_login #}
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <button type="submit" style="display:block;margin-top:12px;">Login</button>
    </form>
  </div>
{% endblock %}
